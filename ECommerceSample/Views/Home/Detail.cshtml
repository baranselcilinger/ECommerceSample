@using ECommerce.Entity
@model Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="~/Home/Index">Home</a><span class="mx-2 mb-0">/</span><a href="~/Home/ListAllProduct">Shop</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Html.DisplayFor(m => m.ProductName)</strong></div>
        </div>
    </div>
</div> 

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a href="javascript:popImage('images/big_pic.jpg','Some Title')" title="header=[Zoom] body=[&nbsp;] fade=[on]">
                    <img src="~/Upload/@Html.DisplayFor(m=>m.Photo)" alt="Image" class="img-fluid"></a>
            </div>
            <div class="col-md-6">
                <h2 class="text-black">@Html.DisplayFor(m => m.ProductName)</h2>
                <div class="details_big_box">
                    <div class="specifications">
                        Stock: <span class="blue">@Html.DisplayFor(m => m.Stock)</span><br />
                        Garantie: <span class="blue">24 month</span><br />
                        Category: <span class="blue">@Html.DisplayFor(m => m.Category.CategoryName)</span><br />
                        Brand: <span class="blue">@Html.DisplayFor(m => m.Brand.BrandName)</span><br />
                    </div>
                
                </div>
                <p><strong class="text-primary h4" >@Html.DisplayFor(m => m.Price)</strong></p>
                <div class="mb-1 d-flex">
                    <label for="option-sm" class="d-flex mr-3 mb-3">
                        <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-sm" name="shop-sizes"></span> <span class="d-inline-block text-black">Small</span>
                    </label>
                    <label for="option-md" class="d-flex mr-3 mb-3">
                        <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-md" name="shop-sizes"></span> <span class="d-inline-block text-black">Medium</span>
                    </label>
                    <label for="option-lg" class="d-flex mr-3 mb-3">
                        <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-lg" name="shop-sizes"></span> <span class="d-inline-block text-black">Large</span>
                    </label>
                    <label for="option-xl" class="d-flex mr-3 mb-3">
                        <span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-xl" name="shop-sizes"></span> <span class="d-inline-block text-black"> Extra Large</span>
                    </label>
                </div>
                <div class="mb-5">
                    <div class="input-group mb-3" style="max-width: 120px;">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                        </div>
                        <input type="text" class="form-control text-center" value="1" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                        </div>
                    </div>
                </div>
                <p><a href="~/Order/Add/@Model.ProductId" class="buy-now btn btn-sm btn-primary">Add To Cart</a></p>
            </div>
        </div>
    </div>
</div>